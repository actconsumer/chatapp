# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_VERSION=v1
BASE_URL=http://localhost:3000
API_BASE_URL=https://api.projectchat.azure-api.net

# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-cosmosdb.documents.azure.com:443/
COSMOS_KEY=your-cosmos-db-primary-key
COSMOS_DATABASE_NAME=ProjectChatDB

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=projectchatstorage
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=projectchatstorage;AccountKey=your-key;EndpointSuffix=core.windows.net
BLOB_CONTAINER_AVATARS=avatars
BLOB_CONTAINER_MEDIA=media
BLOB_CONTAINER_DOCUMENTS=documents

# Azure SignalR Service
AZURE_SIGNALR_CONNECTION_STRING=Endpoint=https://your-signalr.service.signalr.net;AccessKey=your-access-key;Version=1.0;

# Azure Redis Cache
REDIS_HOST=your-redis-cache.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-password
REDIS_TLS_ENABLED=true

# Azure Service Bus (for message queuing)
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Service (Azure Communication Services or SendGrid)
EMAIL_SERVICE=azure-communication-services
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-acs.communication.azure.com/;accesskey=your-key
EMAIL_FROM=no-reply@projectchat.azurecomm.net
EMAIL_FROM_NAME=Project Chat

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,exp://192.168.1.100:19000

# API Gateway Configuration
AZURE_API_MANAGEMENT_URL=https://api.projectchat.azure-api.net
AZURE_API_MANAGEMENT_SUBSCRIPTION_KEY=your-apim-subscription-key

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-instrumentation-key
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://eastus-8.in.applicationinsights.azure.com/

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100

# Frontend URL (for email links)
FRONTEND_URL=exp://localhost:19000
FRONTEND_WEB_URL=http://localhost:19006

# Azure AD B2C (Optional - for enterprise SSO)
AZURE_AD_B2C_TENANT_NAME=your-tenant
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_POLICY=B2C_1_signupsignin

# 2FA Configuration
TOTP_ISSUER=ProjectChat
TOTP_WINDOW=1

# Encryption Configuration
RSA_KEY_SIZE=2048
MESSAGE_KEY_ALGORITHM=aes-256-gcm
